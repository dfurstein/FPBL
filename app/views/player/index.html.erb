<div class="page-header">
  <h1><%= @player.name %><small>&nbsp;&nbsp;&nbsp;<%= Player.position_name(@player.position) %></small></h1>
</div>

<% if @player.hitter? %>
  <%= render 'hitting_statistics' if @hitting_stats %>
  <%= render 'pitching_statistics' if @pitching_stats %>
<% else %>
  <%= render 'pitching_statistics' if @pitching_stats %>
  <%= render 'hitting_statistics' if @hitting_stats %>
<% end %>

<% if @first_season < 2007 %>
  <div class="col-md-12">
    <div class="alert alert-danger" role="alert"><a href='http://bit.ly/1VFQ6zB' class='alert-link'>*All earlier statistics were lost during the great pickle purge of '07.</a></div>
  </div>
<% end %>

