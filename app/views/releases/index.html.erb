<div class="page-header">
  <h1><%= @team.name %><small>&nbsp;&nbsp;&nbsp;Contract Releases</small></h1>
</div>

<div class="row">
	<div class="col-md-6">
		<div class="panel panel-primary">
			<div class="panel-heading">Pitchers</div>
      <div id='pitchers'>
        <%= render 'pitchers', locals: {year: @year, franchise_id: @franchise_id, active_players: @active_players} %>
      </div>
		</div>
	</div>

	<div class="col-md-6">
		<div class="panel panel-primary">
			<div class="panel-heading">Hitters</div>
      <div id='hitters'>
        <%= render 'hitters', locals: {year: @year, franchise_id: @franchise_id, active_players: @active_players} %>
      </div>
		</div>
	</div>

  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Totals</div>
      <div class="panel panel-info">
        <div class="panel-heading">Salary</div>
        <table class='table table-condensed' id='salaries'>
          <%= render 'salaries', locals: {year: @year, franchise_id: @franchise_id} %>
        </table>
      </div>
      <div class="panel panel-info">
        <div class="panel-heading">Players</div>
        <table class='table table-condensed' id='totals'>
          <%= render 'totals', locals: {year: @year, franchise_id: @franchise_id} %>
        </table>
      </div>
    </div>
  </div>
</div>