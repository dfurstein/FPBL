<% @leagues.each { |league| %>
  <div class="panel panel-primary">
    <div class="panel-heading"><%= league %> League</div>
    <% @divisions[league].each { |division| %>
      <div class="panel panel-info">
        <div class="panel-heading"><%= division %> Division</div>
        <table class='table table-bordered table-condensed'>
          <tr>
            <th class="col-sm-4 col-sm-offset-3">Team</th>
            <th class="col-sm-1">W</th>
            <th class="col-sm-1">L</th>
            <th class="col-sm-1">Pct</th>
            <th class="col-sm-1">GB</th>
            <th class="col-sm-1">Strk</th>
          </tr>
          <% @records[division].each { |record| %>
            <tr>
              <td><%= record.team.name %></td>
              <td><%= record.wins %></td>
              <td><%= record.losses %></td>
              <td><%= format_win_percentage(record.win_percentage) %></td>
              <td><%= format_games_back(record.games_back_division) %></td>
              <td><%= format_game_streak(record.streak) %></td>
            </tr>
          <% } %>
        </table>
      </div>
    <% } %>
  </div>
<% } %>