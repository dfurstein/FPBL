<% boxscore = String.new %>
<% File.open(@game.dmb_file).readlines.each { |line| %>
	<% sanitized = strip_tags(line) %>
	<% boxscore << ((sanitized == line) ? line : "") %>
<% } %>

<div class="modal fade" id="boxscore<%= @game.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
	<div class="modal-dialog">
	  	<div class="modal-content">
	    	<div class="modal-header">
	      		<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
	      		<h4 class="modal-title"><%= @game.long_description %></h4>
	    	</div>
	    	<div class="modal-body">
				<p>
		      		<pre>
				  		<%= boxscore %>
					</pre>
				</p>
	    	</div>
	    	<div class="modal-footer">
	      		<button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
	    	</div>
	  	</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->