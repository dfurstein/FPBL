<h2>Forgot Your Password?</h2>

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-5">
        <%= f.input :email, 
                      required: false,
                      autofocus: true,
                      label: 'Team',
                      prompt: 'Select Team',
                      collection: Hash[Team.current_teams.map { |team| [team.name, team.owner.email] }],
                      input_html: { class: "form-control" } 
        %>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <div class="row">
      <div class="col-sm-5">
        <%= f.button :submit, 'Email Me', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
