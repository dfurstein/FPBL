<h2>Sign In</h2>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <div class="row">
      <div class="col-sm-5">
        <%= f.input :email, 
                      required: false,
                      autofocus: true,
                      label: 'Team',
                      prompt: 'Select Team',
                      collection: Hash[Team.current_teams.map { |team| [team.name, team.owner.email] }],
                      input_html: { class: "form-control" } 
        %>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-5">
        <%= f.input :password, 
                      required: false,
                      input_html: { class: "form-control" } 
        %>
      </div>
    </div>
    <div class="row fix-checkbox">
      <div class="col-sm-5">
        <% if devise_mapping.rememberable? %>
          <%= f.input :remember_me, 
                        as: :boolean,
                        label: false,
                        inline_label: 'Remember Me?'
          %>
        <% end %>
      </div>
    </div>
  </div>

  <div class='form-actions'>
    <div class="row">
      <div class="col-sm-5">
        <%= f.button :submit, 'Sign In', class: "btn btn-primary" %>
      </div>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
