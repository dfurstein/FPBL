<div class="page-header">
  <h1><%= @team.name %><small>&nbsp;&nbsp;&nbsp;Extensions</small></h1>
</div>

<div class="row">
	<div class="col-md-6">
		<div class="panel panel-primary">
			<div class="panel-heading">Pitchers</div>
			<% %w(SP MR CL).each { |position| %>
				<% @position = position %>
				<%= render 'players', locals: {year: @year, franchise_id: @franchise_id, position: @position} %>
			<% } %>
		</div>
	</div>

	<div class="col-md-6">
		<div class="panel panel-primary">
			<div class="panel-heading">Hitters</div>
			<% %w(C 1B 2B 3B SS LF CF RF DH).each { |position| %>
			<% @position = position %>
				<%= render 'players', locals: {year: @year, franchise_id: @franchise_id, position: @position} %>
			<% } %>
		</div>
	</div>

  <div class="col-md-12">
    <div class="panel panel-primary">
      <div class="panel-heading">Totals</div>
      <div class="panel panel-info">
        <div class="panel-heading">Salary</div>
        <table class='table table-condensed'>
          <tr>
            <th class="col-sm-offset-7"><!-- No Value --></th>
            <% 5.times { |idx| %>
              <th class="col-sm-1"><%= @year + idx %></th>
            <% } %>
          </tr>
          <tr>
            <td>Payroll</td>
            <% 5.times { |idx| %>
              <td><%= Contract.total_salary(@year + idx, @franchise_id) %></td>
            <% } %>
          </tr>
          <tr>
            <td>Salary Cap</td>
            <td><%= Contract.salary_cap(@year, @franchise_id) %></td>
            <% 4.times { |idx| %>
              <td><!-- No Value --></td>
            <% } %>
          </tr>
          <tr>
            <td>Available Salary Cap</td>
            <td><%= Contract.available_salary_cap(@year, @franchise_id) %></td>
            <% 4.times { |idx| %>
              <td><!-- No Value --></td>
            <% } %>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>